{% extends '::base.html.twig' %}

{% block title %}Porte Aperte Inverno{% endblock %}

{% block stylesheets %}

	{{ parent() }}
	<link href="{{ asset('bundles/a4uform/css/jquery.scrollbar.css') }}" type="text/css" rel="stylesheet">

	<style>
	.filter-table .quick { margin-left: 0.5em; font-size: 0.8em; text-decoration: none; }
	.fitler-table .quick:hover { text-decoration: underline; }
	td.alt { background-color: #ffc; background-color: rgba(255, 255, 0, 0.2); }
	</style> <!-- or put the styling in your stylesheet -->

{% endblock %}

{% block body %}

<div class="container">

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" >
            Porte aperte Unicam Inverno
          </a>
        </div>        
        <form class="navbar-form navbar-left">
          <div class="input-group">
            <div class="input-group" style="max-width:300px;">
                <input type="text" class="form-control" id="input-filter" placeholder="cerca">
                <span class="input-group-addon glyphicon glyphicon-search"> </span>
            </div>
          </div>
        </form>
      </div>
    </nav>

{#    ISCRITTI:
    {% for student in subscribed %}
    {{student.CFSTUDENTE}}
    {%endfor%}
#}
    <div style="overflow-y: auto; overflow-x: auto;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th><b>Nome</b></th>
                    <th><b>Cognome</b></th>
                    <th><b>Indirizzo</b></th>
                    <th><b>CAP</b></th>
                    <th><b>Città</b></th>
                    <th><b>Email</b></th>
                    <th><b>Tel.</b></th>
                    <th><b>Data di nascita</b></th>
                    <th><b>Luogo di nascita</b></th>
                    <th><b>Scuola di provenienza</b></th>
                    <th><b>Partecipato altre attività</b></th>
                    <th><b>Attività</b></th>
                    <th><b>Altra attività</b></th>
                    <th><b>Referenze</b></th>
                    <th><b>Altra referenza</b></th>
                    <th><b>Corso di laurea</b></th>
                    <th><b>Codice Fiscale</b></th>
                    <th><b>data sottoscrizione</b></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        {% include 'A4UFormBundle::Forms/base_show_select.html.twig' %}
                        <td><form style="display:inline;" action="{{ path('a4u_form_edit_porteAperteInverno', {'id': (loop.index) }) }}"><input type="submit" class="btn btn-default" aria-label="Left Align" value="modifica" /></form></td>
                        <td>{{user.name}}</td>
                        <td>{{user.surname}}</td>
                        <td>{{user.address}}</td>
                        <td>{{user.cap}}</td>
                        <td>{{user.city}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.phone}}</td>
                        <td>{{user.birthDate|date('d-m-Y')}}</td>
                        <td>{{user.birthPlace}}</td>
                        <td>{{user.attendedSchool}}</td>
                        <td>{{user.hasAttendedToOtherActivities}}</td>
                        <td>{{user.activity}}</td>
                        <td>{{user.otherActivity}}</td>
                        <td>{{user.reference}}</td>
                        <td>{{user.otherReference}}</td>
                        <td>{{user.unicamCourse}}</td>
                        <td>{{user.fiscalCode}}</td>
                        <td>{{user.submissionDate|date('d-m-Y H:i:s')}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}


    <script type="text/javascript" src="{{ asset('bundles/a4uform/javascript/jquery.scrollbar.min.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/a4uform/javascript/searchTable/jquery.filtertable.js') }}"></script>

    <script>
    $(document).ready(function() {
        $('table').filterTable({ // apply filterTable to all tables on this page
            inputSelector: '#input-filter' // use the existing input instead of creating a new one
        });
    });
    </script>


    <script type="text/javascript">
        // Se viene clickato il pulsante per cancellare la keyword si viene rediretti a showPAI
        $(document).on('click', '#removeLastSearch' , function() {
            window.location.replace("{{ path('a4u_form_showPAI') }}");
        })
    </script>

    <script type="text/javascript">

		jQuery(document).ready(function(){
		    jQuery('.scrollbar-inner').scrollbar();
		});
    
    </script>

{% endblock %}
