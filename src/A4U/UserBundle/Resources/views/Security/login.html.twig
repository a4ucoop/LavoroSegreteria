{% extends '::base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link href="{{ asset('bundles/a4uuser/css/signin.css') }}" rel="stylesheet">
    
{% endblock %}

{% block body %}

    <form action="{{ path('login_check') }}" method="post" class="form-signin" role="form">
        
        <h2 class="form-signin-heading">Effettua l'accesso</h2>
        
        <label for="username" class="sr-only">Username</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" required autofocus />

        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required />
        
        <div class="checkbox">
            <label>
            <input type="checkbox" id="remember_me" name="_remember_me" /> Ricordami
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Accedi</button>

        {% if error %}
            <div align="center" style="margin-top:20px; color:red;">{{ error.message }}</div>
        {% endif %}

    </form>




{% endblock %}
